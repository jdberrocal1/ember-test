<div class="container-fluid login-container">
  <div class="box">
    <div class="row title-container">
      <div class="col col-xs-12 display-center">
        <img src="/assets/img/xyz-logo.png">
        <h4>The Honest Company, Inc.</h4>
      </div>
    </div>
    <div class="row form-container">
      <form>
        <div class="form-group">
          <label class="form-label">User</label>
          {{input type="text" value=username class="form-input" id="user"}}
          <div class="input-border"></div>
        </div>
        <div class="form-group">
          <label class="form-label">Password</label>
          {{input type="password" value=password class="form-input" id="password"}}
          <div class="input-border"></div>
        </div>
        <div class="form-group display-center">
          <span class="error-msg">{{logingMsg}}</span>
          <button class="login-button" {{action 'login'}}>Login</button>
        </div>
      </form>
    </div>
  </div>
</div>